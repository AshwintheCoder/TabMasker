{
  "manifest_version": 3,
  "name": "Tab Masker",
  "description": "Disguise any tab\u2019s title & favicon. Groups + site rules + per-tab overrides. Auto-group suggestions.",
  "version": "1.4.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Masker"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "toggle_disguise": {
      "suggested_key": {
        "default": "Alt+S"
      },
      "description": "Toggle disguise for the current tab"
    },
    "abort_disguise": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Remove disguise for the current tab"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}